<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template_wish_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="6dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tp_wishlist_iv_product_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_weight="0.2"
                android:src="@drawable/te0001" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tp_wish_list_tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="4dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="Product Name"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tp_wishlist_tv_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:text="449/-"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/tp_wishlist_iv_add_to_cart_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp" />

                    <LinearLayout
                        android:id="@+id/tp_wishlist_add_to_cart_toolset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:text="Qty:"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tp_wishlist_item_tv_product_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:padding="4dp"
                            android:text="1"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/tp_wishlist_item_iv_increment_quantity"
                            android:layout_width="30dp"
                            android:layout_height="34dp"
                            android:layout_margin="2dp"
                            android:text="+" />

                        <Button
                            android:id="@+id/tp_wishlist_item_iv_decrement_quantity"
                            android:layout_width="30dp"
                            android:layout_height="34dp"
                            android:layout_margin="2dp"
                            android:text="-" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tp_wishlist_iv_delete_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ic_delete_black_24dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
